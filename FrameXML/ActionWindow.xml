<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="ActionWindow.lua"/>
	<Frame name="ActionWindowButtonTemplate" parent="MainMenuBarArtFrame" frameStrata="HIGH" virtual="true">
		<Size>
			<AbsDimension x="36" y="36"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parentTexture">
					<Size>
						<AbsDimension x="32" y="32"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
				<FontString name="$parentLabel" inherits="NumberFontNormal">
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="-1" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
	<Frame name="ActionWindowButton1" inherits="ActionWindowButtonTemplate">
		<Scripts>
			<OnLoad>
				self:RegisterEvent("UPDATE_BINDINGS");
			</OnLoad>
			<OnEvent>
				if ( event == "UPDATE_BINDINGS" ) then
					ActionWindowUpdate();
				end
			</OnEvent>
		</Scripts>
	</Frame>
	<Frame name="ActionWindowButton2" inherits="ActionWindowButtonTemplate"/>
	<Frame name="ActionWindowButton3" inherits="ActionWindowButtonTemplate"/>
	<Frame name="ActionWindowButton4" inherits="ActionWindowButtonTemplate"/>
</Ui>

