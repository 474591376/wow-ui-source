<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="TutorialFrame.lua"/>
	<Frame name="TutorialFrame" toplevel="true" parent="UIParent" movable="true" clampedToScreen="true" enableMouse="true" frameStrata="HIGH" hidden="true">
		<Anchors>
			<Anchor point="BOTTOM" x="0" y="100"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentBackground">
					<Anchors>
						<Anchor point="TOPLEFT" parent="$parentTop" relativePoint="TOPLEFT" x="13" y="-35"/>
						<Anchor point="BOTTOMRIGHT" parent="$parentBottom" relativePoint="BOTTOMRIGHT" x="-3" y="5"/>
					</Anchors>
					<Color r="0" g="0" b="0" a="1"/>
				</Texture>
			</Layer>
			<Layer level="BORDER">
				<Texture name="$parentTop" file="Interface\TutorialFrame\UI-TUTORIAL-FRAME">
					<Size x="364" y="80"/>
					<Anchors>
						<Anchor point="TOP" x="0" y="0"/>
					</Anchors>
					<TexCoords left="0.0019531" right="0.7109375" top="0.1953125" bottom="0.3496094"/>
				</Texture>
				<Texture name="$parentBottom" file="Interface\TutorialFrame\UI-TUTORIAL-FRAME">
					<Size x="356" y="15"/>
					<TexCoords left="0.0019531" right="0.6953125" top="0.3554688" bottom="0.3828125"/>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture name="$parentMouseLeftClick" file="Interface\TutorialFrame\UI-TUTORIAL-FRAME">
					<Size x="76" y="101"/>
					<TexCoords left="0.0019531" right="0.1484375" top="0.5898438" bottom="0.7851563"/>
				</Texture>
				<Texture name="$parentMouseRightClick" file="Interface\TutorialFrame\UI-TUTORIAL-FRAME">
					<Size x="76" y="101"/>
					<TexCoords left="0.0019531" right="0.1484375" top="0.3886719" bottom="0.5839844"/>
				</Texture>
				<Texture name="$parentMouseBothClick" file="Interface\TutorialFrame\UI-TUTORIAL-FRAME">
					<Size x="76" y="101"/>
					<TexCoords left="0.0019531" right="0.1484375" top="0.7910156" bottom="0.9863281"/>
				</Texture>
				<Texture name="$parentMouseWheel" file="Interface\TutorialFrame\UI-TUTORIAL-FRAME">
					<Size x="76" y="101"/>
					<TexCoords left="0.1542969" right="0.3007813" top="0.3886719" bottom="0.5839844"/>
				</Texture>
				<Texture name="$parentArrowUp" file="Interface\TutorialFrame\UI-TUTORIAL-FRAME">
					<Size x="68" y="89"/>
					<TexCoords left="0.3066406" right="0.4375000" top="0.3886719" bottom="0.5605469"/>
				</Texture>
				<Texture name="$parentArrowDown" file="Interface\TutorialFrame\UI-TUTORIAL-FRAME">
					<Size x="68" y="89"/>
					<TexCoords left="0.3066406" right="0.4375000" top="0.5605469" bottom="0.3886719"/>
				</Texture>
				<Texture name="$parentArrowCurveRight" file="Interface\TutorialFrame\UI-TUTORIAL-FRAME">
					<Size x="68" y="89"/>
					<TexCoords left="0.3066406" right="0.4335938" top="0.5664063" bottom="0.7226563"/>
				</Texture>
				<Texture name="$parentArrowCurveLeft" file="Interface\TutorialFrame\UI-TUTORIAL-FRAME">
					<Size x="68" y="89"/>
					<TexCoords left="0.4335938" right="0.3066406" top="0.5664063" bottom="0.7226563"/>
				</Texture>
				<FontString name="$parentTitle" inherits="GameFontHighlight" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOP" x="15" y="-17"/>
					</Anchors>
					<Color r="1.0" g="0.82" b="0"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<ScrollFrame name="TutorialFrameTextScrollFrame" inherits="UIPanelScrollFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" x="30" y="-100"/>
					<Anchor point="BOTTOMRIGHT" x="-30" y="40"/>
				</Anchors>
				<ScrollChild>
					<Frame name="TutorialFrameTextScrollChildFrame">
						<Size x="1" y="1"/>
						<Layers>
							<Layer level="OVERLAY">
								<FontString name="TutorialFrameText" inherits="GameFontNormal" justifyH="LEFT">
									<Size x="300" y="0"/>
									<Anchors>
										<Anchor point="TOPLEFT"/>
									</Anchors>
								<Color r="1.0" g="1.0" b="1.0"/>
								</FontString>									
							</Layer>
						</Layers>
					</Frame>
				</ScrollChild>
			<Scripts>
				<OnLoad>
--					self.scrollBarHideable = true;
					ScrollFrame_OnLoad(self);
				</OnLoad>
			</Scripts>
			</ScrollFrame>
			<Frame name="TutorialTextBorder" frameStrata="TOOLTIP" hidden="true">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="TutorialFrameTextScrollFrame" x="0" y="0"/>
					<Anchor point="BOTTOMRIGHT" relativeTo="TutorialFrameTextScrollFrame" x="0" y="0"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<Texture name="tomtest" setAllPoints="true">
							<Color r="1.0" g="0" b="0"/>
						</Texture>
					</Layer>
				</Layers>
			</Frame>
			<Frame name="$parentCallOut" frameStrata="TOOLTIP" hidden="true">
				<Backdrop edgeFile="Interface\TutorialFrame\UI-TutorialFrame-CalloutGlow" alphaMode="ADD">
					<EdgeSize>
						<AbsValue val="16"/>
					</EdgeSize>
				</Backdrop>
 				<Animations>
					<AnimationGroup looping="BOUNCE">
						<Alpha name="$parentPulser" change="-.7" duration=".75"/>
					</AnimationGroup>
				</Animations>
			</Frame>
			<CheckButton name="$parentCheckButton" checked="true" inherits="UICheckButtonTemplate" hidden="true">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="BOTTOMLEFT" x="20" y="5"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<FontString name="$parentCheckboxText" inherits="GameFontNormalSmall" text="ENABLE_TUTORIAL_TEXT">
							<Anchors>
								<Anchor point="LEFT" relativePoint="RIGHT" x="0" y="2"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</CheckButton>
            <Button inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="4" y="-8"/>
                </Anchors>
            </Button>
		</Frames>
		<Scripts>
			<OnShow>
				self:RegisterEvent("DISPLAY_SIZE_CHANGED");			
			</OnShow>
			<OnLoad>
				TutorialFrame_OnLoad(self);
			</OnLoad>
			<OnHide function="TutorialFrame_OnHide"/>
			<OnEvent>
				local arg1 = ...;
				if ( event == "TUTORIAL_TRIGGER" ) then
					TutorialFrame_NewTutorial(arg1);
				elseif ( event == "CINEMATIC_STOP" ) then
					TutorialFrame_CheckIntro();
				elseif ( event == "DISPLAY_SIZE_CHANGED" ) then
					TutorialFrame_Update(TutorialFrame.id);
				end
			</OnEvent>
		</Scripts>
	</Frame>
	<Button name="TutorialFrameAlertButton" toplevel="true" parent="UIParent" hidden="true">
		<Size x="116" y="71"/>
		<Anchors>
			<Anchor point="BOTTOM" x="0" y="0"/>
		</Anchors>
		<Layers>
			<Layer level="OVERLAY">
				<Texture name="$parentBadge" file="Interface\TutorialFrame\UI-TUTORIAL-FRAME" hidden="true">
					<Size x="53" y="52"/>
					<Anchors>
						<Anchor point="CENTER" x="30" y="20"/>
					</Anchors>
					<TexCoords left="0.1542969" right="0.2558594" top="0.8789063" bottom="0.9785156"/>
				</Texture>
				<FontString name="$parentBadgeText" inherits="GameFontNormal" justifyH="CENTER" justifyV="CENTER" hidden="true">
					<Anchors>
						<Anchor point="CENTER" relativeTo="TutorialFrameAlertButtonBadge" x="0" y="1"/>
					</Anchors>
					<Color r="1.0" g="1.0" b="1.0"/>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
			</OnLoad>
			<OnEnter>
				GameTooltip:SetOwner(self, "ANCHOR_LEFT");
				GameTooltip:SetText(self.tooltip);
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
			<OnClick>
				TutorialFrame_AlertButton_OnClick(self);
			</OnClick>
		</Scripts>
		<NormalTexture file="Interface\TutorialFrame\UI-TUTORIAL-FRAME">
			<TexCoords left="0.7167969" right="0.9414063" top="0.1953125" bottom="0.3320313"/>
		</NormalTexture>
		<HighlightTexture file="Interface\TutorialFrame\UI-TUTORIAL-FRAME" alphaMode="ADD">
			<Size x="50" y="50"/>
			<Anchors>
				<Anchor point="CENTER" x="2" y="4"/>
			</Anchors>
			<TexCoords left="0.3066406" right="0.4023438" top="0.7285156" bottom="0.8242188"/>
		</HighlightTexture>
	</Button>
</Ui>
