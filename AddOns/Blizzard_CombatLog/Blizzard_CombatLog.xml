<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Script file="localization.lua"/>
	<Script file="Blizzard_CombatLog.lua"/>
	<Frame name="CombatLogDropDown" inherits="UIDropDownMenuTemplate"/>
	<Frame name="CombatLogQuickButtonFrame" parent="ChatFrame2">
		<Size>
			<AbsDimension x="65" y="24"/>
		</Size>
		
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentTexture" setAllPoints="true">
					<Color r="0.0" g="0.0" b="0.0" a="0.5"/>
				</Texture>
			</Layer>
		</Layers>
		
		<Anchors>
			<Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER">
				<Offset>
					<AbsDimension x="0" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Frames>
			<Button name="$parentDefault" inherits="GameMenuButtonTemplate" id="1">
				<Size>
					<AbsDimension x="80" y="20"/>
				</Size>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture name="$parentTexture" setAllPoints="true">
							<!--<Color r="0.8" g="0.9" b="0.2" a="0.5"/>-->
						</Texture>
					</Layer>
				</Layers>
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parent" relativePoint="LEFT">
						<Offset>
							<AbsDimension x="3" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						this:SetText("Default");
					</OnLoad>
					<OnClick>
						 Blizzard_CombatLog_QuickButton_OnClick( this:GetID() )
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parentEverything" inherits="GameMenuButtonTemplate" id="2">
				<Size>
					<AbsDimension x="80" y="20"/>
				</Size>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture name="$parentTexture" setAllPoints="true">
							<!--<Color r="0.8" g="0.9" b="0.2" a="0.5"/>-->
						</Texture>
					</Layer>
				</Layers>
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentDefault" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="3" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						this:SetText("Everything");
					</OnLoad>
					<OnClick>
						 Blizzard_CombatLog_QuickButton_OnClick( this:GetID() )
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parentMe" inherits="GameMenuButtonTemplate" id="3">
				<Size>
					<AbsDimension x="40" y="20"/>
				</Size>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture name="$parentTexture" setAllPoints="true">
							<!--<Color r="0.8" g="0.9" b="0.2" a="0.5"/>-->
						</Texture>
					</Layer>
				</Layers>
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentEverything" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="3" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						this:SetText("Me");
					</OnLoad>
					<OnClick>
						 Blizzard_CombatLog_QuickButton_OnClick( this:GetID() )
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parentFriends" inherits="GameMenuButtonTemplate" id="4">
				<Size>
					<AbsDimension x="100" y="20"/>
				</Size>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture name="$parentTexture" setAllPoints="true">
							<!--<Color r="0.8" g="0.9" b="0.2" a="0.5"/>-->
						</Texture>
					</Layer>
				</Layers>
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parentMe" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="3" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						this:SetText("Friends");
					</OnLoad>
					<OnClick>
						 Blizzard_CombatLog_QuickButton_OnClick( this:GetID() );
					</OnClick>
				</Scripts>
			</Button>
			<Button name="$parentClear" inherits="GameMenuButtonTemplate">
				<Size>
					<AbsDimension x="40" y="20"/>
				</Size>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture name="$parentTexture" setAllPoints="true">
							<!--<Color r="0.8" g="0.9" b="0.2" a="0.5"/>-->
						</Texture>
					</Layer>
				</Layers>
				<Anchors>
					<Anchor point="RIGHT" relativeTo="$parent" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="-3" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						this:SetText("Clear");
					</OnLoad>
					<OnClick>
						Blizzard_CombatLog_QuickButton_Clear_OnClick()
					</OnClick>
				</Scripts>
			</Button>
			<StatusBar name="$parentProgressBar" drawLayer="LOW" visible="false">
				<Size>
					<AbsDimension x="195" y="4"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="0" y="2"/>
						</Offset>
					</Anchor>
					<Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="0" y="2"/>
						</Offset>
					</Anchor>
				</Anchors>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
				<BarColor r="0.0" g="1.0" b="0.3"/>
			</StatusBar>		
		</Frames>
		<Scripts>
			<OnLoad>
				 Blizzard_CombatLog_QuickButtonFrame_OnLoad();
			</OnLoad>
		</Scripts>
	</Frame>
	<Frame name="CombatLogUpdateFrame" parent="UIParent" visible="true">
		<Size>
			<AbsDimension x="1" y="1"/>
		</Size>
		<!--
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentTexture" setAllPoints="true">
					<Color r="0.0" g="0.9" b="0.2" a="0.5"/>
				</Texture>
			</Layer>
		</Layers>
		-->
		<Anchors>
			<Anchor point="TOP" relativeTo="$parent" relativePoint="BOTTOM">
				<Offset>
