*******************************************************************************
-->
	<Frame name="GuildRewardsFrame" parent="GuildFrame" setAllPoints="true" hidden="true">
		<Frames>
			<Frame name="GuildRewardsViewDropdown" inherits="UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="-12" y="-34"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad function="GuildRewardsViewDropdown_OnLoad"/>
				</Scripts>
			</Frame>
			<ScrollFrame name="GuildRewardsContainer" inherits="HybridScrollFrameTemplate" hidden="false">
				<Size x="302" y="302"/>
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="-27" y="-70"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture name="$parentBg" parentKey="BG" file="Interface\GuildFrame\TrainerTextures" setAllPoints="true">
							<TexCoords left="0.00195313" right="0.58593750" top="0.00195313" bottom="0.65429688"/>
						</Texture>
					</Layer>
				</Layers>
				<Frames>
					<Slider name="$parentScrollBar" inherits="HybridScrollBarTemplate">
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="TOPRIGHT">
								<Offset>
									<AbsDimension x="0" y="-12"/>
								</Offset>
							</Anchor>
							<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT">
								<Offset>
									<AbsDimension x="0" y="11"/>
								</Offset>
							</Anchor>
						</Anchors>
					</Slider>
				</Frames>
			</ScrollFrame>
		</Frames>
		<Scripts>
			<OnLoad function="GuildRewardsFrame_OnLoad"/>
		</Scripts>
	</Frame>
